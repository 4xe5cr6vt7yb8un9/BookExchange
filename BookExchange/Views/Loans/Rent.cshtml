@model BookExchange.Models.Rents

@{
    ViewData["Title"] = "Rent";
}

<h1>Rent</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Rent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RenterName" class="control-label"></label>
                <input asp-for="RenterName" class="form-control" />
                <span asp-validation-for="RenterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RenterEmail" class="control-label"></label>
                <input asp-for="RenterEmail" class="form-control" />
                <span asp-validation-for="RenterEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
