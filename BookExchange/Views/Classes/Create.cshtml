@model BookExchange.Models.Classes

@{
    ViewData["Title"] = "Create";
}

<html>
<head>
    <title>BookExchange</title>

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="~/css/CreateISBN.css" asp-append-version="true" />
</head>

<body>
    <div id="page">
        <div id="c1" class="w3-card w3-light-gray w3-round">
            <div id="c2" class="w3-container w3-light-gray w3-">
                <h2 id="text">Enter the Class Details</h2>
            </div>

            <div class="row" style="margin-top: 4vh !important;">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group w3-input w3-margin">
                            <label asp-for="Name" class="control-label required"></label>
                            <input asp-for="Name" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group w3-input w3-margin">
                            <label asp-for="Grade" class="control-label required"></label>
                            <input asp-for="Grade" class="form-control" autocomplete="off"/>
                            <span asp-validation-for="Grade" class="text-danger"></span>
                        </div>
                        <div class="form-group w3-input w3-margin">
                            <label asp-for="Teacher" class="control-label required"></label>
                            <input asp-for="Teacher" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Teacher" class="text-danger"></span>
                        </div>
                        <div class="form-group LoanSubmit">
                            <input type="submit" value="Add Class" class="w3-btn w3-round btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
